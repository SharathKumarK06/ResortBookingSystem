<form class="registration-form" action="/register" method="post" enctype="multipart/form-data">
  <!-- user's name - textbox -->
  <div class="form-group">
    <label for="name" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="name" placeholder="Name" required>
    </div>
  </div>

  <!-- email - textbox -->
  <div class="form-group">
    <label for="email" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" name="email" placeholder="Email" required>
    </div>
  </div>

  <!-- phone number - textbox -->
  <div class="form-group">
    <label for="phone" class="col-sm-2 col-form-label">Phone Number</label>
    <div class="col-sm-10">
      <input type="tel" class="form-control" name="phone" placeholder="Phone Number" required>
    </div>
  </div>

  <!-- date of birth - date -->
  <div class="form-group">
    <label for="phone" class="col-sm-2 col-form-label">Date of Birth</label>
    <div class="col-sm-10">
      <input type="date" class="form-control" name="dob" placeholder="Date of Birth" required>
    </div>
  </div>

  <!-- password - textbox -->
  <div class="form-group">
    <label for="password" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" name="password" placeholder="Password" required>
    </div>
  </div>

  <!-- sex - radio button -->
  <div class="form-group">
    <legend class="col-form-label col-sm-2 pt-0">Sex</legend>
    <div class="col-sm-10 sex-radio-button">
      <div class="form-check">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="sex" value="male" checked required>
          Male
        </label>
      </div>
      <div class="form-check">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="sex" value="female">
          Female
        </label>
      </div>
      <div class="form-check">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="sex" id="notsay" value="rathernotsay">
          Rather Not Say
        </label>
      </div>
    </div>
  </div>

  <!-- address - textarea -->
  <div class="form-group">
    <label for="address">Address</label>
    <div class="col-sm-10">
      <textarea class="form-control" name="address" rows="3" required></textarea>
    </div>
  </div>

  <!-- photo of your ID Card - input:type=file -->
  <div class="mb-3">
    <label for="idcard" class="form-label">Photo of your ID Card (Only pdf format is allowed)</label>
    <div class="col-sm-10">
      <input class="form-control" type="file" name="idcard" required>
    </div>
  </div>

  <!-- Type of user - radio button -->
  <div class="form-group ">
    <legend class="col-form-label col-sm-2 pt-0">Type of User</legend>
    <div class="col-sm-10 usertype-radio-button">
      <div class="form-check">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="usertype" value="customer">
          Customer (User who want to book resorts)
        </label>
      </div>
      <div class="form-check">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="usertype" value="manager">
          Manger (User who is owner of resort(s))
        </label>
      </div>
    </div>
  </div>

  <br>
  
  <!-- submit and reset button -->
  <div class="form-group">
    <div class="col-sm-10 reset-submit-class">
      <button type="reset" class="btn btn-primary reset-submit">Reset</button>
      <button type="submit" class="btn btn-primary reset-submit">Sign in</button>
    </div>
  </div>
  
  <br>

  <!-- Login buttons -->
  <div class="col-sm-10 login-text">
    <p>Already a member? <a href="/login">Log in</a></p>
  </div>

  <br>

  <% if (locals != null && locals.stat == "ok" ) { %>
    <%- include('partials/successMessage.ejs', locals.message) %> 
  <% } else if (locals != null && locals.stat == "err" ) { %>
    <%- include('partials/errorMessage.ejs', locals.message) %> 
  <% } %>
  
</form>
